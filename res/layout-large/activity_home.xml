<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinstripewide"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".ActivityHome" >

    <ImageView
        android:id="@+id/home_logoimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/home_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/home_button"
        android:text="Tutorial"
        android:minHeight="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/home_login_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/home_button"
        android:text="Login/Signup"
        android:minHeight="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    </LinearLayout>





    <Button
        android:id="@+id/home_currentGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@color/black"
        android:background="@layout/home_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joiddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddn"
        android:visibility="invisible"
        android:textSize="10dp"
        android:layout_above="@+id/home_currentGames"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />

    <Button
        android:id="@+id/home_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/home_button"
        android:text="Join"
        android:textSize="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/home_host"
        android:layout_toRightOf="@id/home_logoimage"
        android:layout_toEndOf="@+id/home_logoimage" />


    <Button
        android:id="@+id/home_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/home_button"
        android:text="Host"
        android:textSize="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/black"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@id/home_logoimage"
        android:layout_toStartOf="@+id/home_logoimage" />


</RelativeLayout>
